    "esbuild": "^0.25.5",
    "eslint": "^9.29.0",
    "graphql": "^16.11.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@apollo/server": "^4.12.2",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
