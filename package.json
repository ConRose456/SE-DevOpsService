{
  "name": "@conrose456/devopsservice",
  "version": "1.0.8",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "test": "jest",
    "start": "tsx src/bin/devServer.ts",
    "build": "npm install && npm run build:graphql && node esbuild.config.js",
    "publish:github": "npm run build && npm publish",
    "merge:graphql": "ts-node src/graphql/mergeSchemas.mjs",
    "generate:types": "graphql-codegen --config src/graphql/codegen.ts",
    "build:graphql": "npm run merge:graphql && npm run generate:types",
    "lint": "prettier --ignore-path ../../.prettierignore --write '.' && eslint --fix \"**/*.ts\""
  },
  "devDependencies": {
    "@aws-sdk/client-dynamodb": "^3.830.0",
    "@aws-sdk/lib-dynamodb": "^3.830.0",
    "@eslint/eslintrc": "^3.3.1",
    "@graphql-codegen/cli": "^5.0.7",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-tools/graphql-file-loader": "^8.0.20",
    "@graphql-tools/load": "^8.1.0",
    "@graphql-tools/load-files": "^7.0.1",
    "@graphql-tools/merge": "^9.0.24",
    "@swc/core": "^1.12.5",
    "@swc/jest": "^0.2.38",
    "@types/jest": "^30.0.0",
    "apollo-datasource": "^3.3.2",
    "esbuild": "^0.25.5",
    "eslint": "^9.29.0",
    "graphql": "^16.11.0",
    "jest": "^30.0.2",
    "jest-transform-graphql": "^2.1.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@apollo/server": "^4.12.2",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "apollo-server-lambda": "^3.13.0",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "lodash": "^4.17.21",
    "lodash.merge": "^4.6.2"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "coverageProvider": "v8",
    "coverageThreshold": {
      "global": {
        "statements": 80,
        "branches": 80,
        "functions": 80,
        "lines": 80
      }
    },
    "moduleNameMapper": {
      "^axios$": "axios/dist/node/axios.cjs"
    },
    "silent": true,
    "transform": {
      "\\.graphql$": "jest-transform-graphql",
      "^.+\\.(t|j)sx?$": "@swc/jest"
    },
    "notify": false
  }
}
